<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.WentCampingAreasFragment">
        <TextView
            android:id="@+id/textViewWentCampingAreas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gittiğim Kamp Alanları"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
             />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textViewWentCampingAreas">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RecyclerViewWentCampingAreas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>